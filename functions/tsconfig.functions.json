{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./fn/dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "target": "es6",
    "strictNullChecks": true,
    "lib": [
      "es6",
      "es2015.promise",
      "dom"
    ],
    "sourceMap": true
  },
  "include": [
    "./fn/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
